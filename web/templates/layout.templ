package templates

import (
  "slices"
)

templ Base(title string) {
  <html>
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/static/css/tailwind.min.css"/>
    <script src="/static/js/htmx.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="container mx-auto px-4 mt-4">
    {children...}
  </body>
  </html>
}

templ TextInput(label string, name string, placeholder string, value string, errorMsg string, errors []string) {
  <div class="flex flex-col mb-4">
    <label class="mb-2 font-bold text-sm text-grey-darkest" for={name}>{label}</label>
    <input class={inputClass(errors, name)} type="text" name={name} placeholder={placeholder} value={value}/>
    if (slices.Contains(errors, name)) {
      <p class="text-red-500 text-xs italic">{errorMsg}</p>
    }
  </div>
}

templ SubmitButton(label string) {
  <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">{label}</button>
}

func inputClass(errors []string, name string) string {
  inputClass := "border py-2 px-3 text-grey-darkest"
  if slices.Contains(errors, name) {
    inputClass += " border-red-500"
  }
  return inputClass
}
